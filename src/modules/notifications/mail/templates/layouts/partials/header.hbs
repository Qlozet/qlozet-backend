<div style="text-align: center; margin-bottom: 30px;">
    {{#if companyLogoUrl}}
    <div style="margin-bottom: 20px;">
        <img src="{{companyLogoUrl}}" alt="{{companyName}}" style="max-width: 120px; height: auto;" />
    </div>
    {{/if}}
    <h1 style="color: #2c3e50; margin-bottom: 10px;">{{title}}</h1>
    {{#if subtitle}}<p style="color: #7f8c8d; font-size: 16px;">{{subtitle}}</p>{{/if}}
</div>